<div class="container" style="padding-top: 10%;">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-header text-center" style="background-color: #ffffff;">
                    <h3>Renueva tu contraseña</h3>
                </div>
                <div class="card-body">
                    <form action="/update-password" method="POST">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputEmail4"><b>Nueva Contraseña:</b></label>
                                <input type="password" id="passwordConfirm" name="password"
                                    placeholder="Contraseña Nueva" class="form-control" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputPassword4"><b>Repetir Contraseña:</b></label>
                                <input type="password" id="mypassword" placeholder="Repetir Contraseña Nueva"
                                    class="form-control" required>
                            </div>
                        </div>
                        <div class="form-group mt-30">
                            <button class="btn btn-success btn-block">
                                Solicitar Cambio de Contraseña
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>