<div class="container" style="padding-top: 10%;">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header" style="background-color: #ffffff;">
                    <h3>Renueva tu contraseña</h3>
                </div>
                <div class="card-body">
                    <img src="/img/SIAN_profile.png" alt="Logo Perfil" class="card-img-top mx-auto m-2 w-50">
                    <form action="/signin" method="POST">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputEmail4"><b>Nueva Contraseña:</b></label>
                                <input type="password" id="passwordConfirm" name="password" placeholder="Contraseña"
                                    class="form-control" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputPassword4"><b>Repetir Contraseña Nueva:</b></label>
                                <input type="password" id="mypassword" placeholder="Repetir Contraseña"
                                    class="form-control" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Solicitar Cambio de Contraseña
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>