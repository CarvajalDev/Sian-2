<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/mascotas/add" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="nombre_mascota" placeholder="nombre"
                                autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="direccion_mascota" placeholder="direccion">
                        </div>
                        <div class="form-group">
                            <textarea name="descripcion" rows="2" class="form-control"
                                placeholder="Describe algo"></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Enviar denuncia
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>