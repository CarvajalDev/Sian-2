<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/mascotas/add" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="nombre_mascota" placeholder="Nombre"
                                autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="especie_mascota" placeholder="Especie"
                                autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="raza_mascota" placeholder="Raza" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="direccion_mascota" placeholder="direccion">
                        </div>
                        <div class="form-group col-13">
                            <input class="form-control" type="date" name="nacimiento_mascota" value="">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="tamaño_mascota"
                                placeholder="Tamaño de mascota">
                        </div>
                        <div class="form-group ">
                            <input type="text" class="form-control" name="microchip_mascota"
                                placeholder="Numero de chip">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputFile">Historia Clinica</label>
                            <input type="file" name="historia_clinica_mascota" class="form-control-file"
                                id="exampleInputFile" aria-describedby="fileHelp">
                        </div>
                        <div class="form-group">
                            <textarea name="descripcion" rows="2" class="form-control"
                                placeholder="Describe algo"></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Registrar Mascota
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>