<div class="container p-4">
    <div class="row">

        {{#each mascotas}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <a href="{{url}}">
                        <h3 class="card-title text-uppercase">
                            {{nombre_mascota}}
                        </h3>
                    </a>
                    <p class="m-2">{{descripcion}}</p>
                    <!-- <p>{{timeago created_at}}</p> -->
                    <a href="mascotas/delete/{{id}}" class="btn btn-danger">Eliminar</a>
                    <a href="mascotas/edit/{{id}}" class="btn btn-secondary">Editar</a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No tienes Mascotas agregadas aún ☹</p>
                <a href="/mascotas/add">¡Agrega Una!</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>