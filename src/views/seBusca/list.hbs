<div class="slider-area2 slider-height2 d-flex align-items-center">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="hero-cap text-center pt-50">
                    <h2>Consultas</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container p-4">
    <div class="row">

        <div class="col-md-10 mx-auto">
            <div class="card card-body text-center">
                <p>Queremos que encuentres a tu mascota. Publicala aquí para que la encuentren pronto</p>
                <a href="/busca/add-extraviado" style="color:#1f2c7b;">¡Publicar!</a>
            </div>
        </div>
        <br>
        {{#each seBusca}}
        <div class="col-md-3">
            <br>
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="card-title text-uppercase" style="color:red; font-weight: bold;">
                        Se Busca
                    </h3>
                    <img src="{{foto_seBusca}}" class="img-fluid" alt="foto de mascota">
                    <p align="center" style="color: green">{{tipo_seBusca}}</p>
                    <p class="m-1" align="left"><span style="color:#0C69D9">Nombre:</span> {{nombre_seBusca}}</p>
                    <p class="m-1" align="left"><span style="color:#0C69D9">Raza:</span> {{raza_seBusca}}</p>
                    <p class="m-1" align="left"><span style="color:#0C69D9">Edad:</span> {{edad_seBusca}} años</p>
                    <p class="m-1" align="left"><span style="color:#0C69D9">Visto en:</span>
                        {{ubicacion_seBusca}}</p>
                    <p class="m-1" align="left"><span style="color:#0C69D9">Caracteristicas:</span>
                        {{caracteristica_seBusca}}
                    </p>
                    <br>
                    <!-- <p>{{timeago created_at}}</p> -->
                    <a href="/busca/delete/{{id}}" class="genric-btn danger-border">Eliminar</a>
                    <!--<a href="mascotas/edit/{{id}}" class="genric-btn primary">Editar</a>-->
                </div>
            </div>
        </div>
        <br>
        {{else}}

        {{/each}}
    </div>
</div>